# Use the official Ubuntu base image
FROM ubuntu:latest

# Update the APT package repository and install Python3 and pip3
RUN apt-get update -y && \
    apt-get install -y python3 python3-pip

# Install Flask using pip3
RUN pip3 install flask

# Set the working directory to /app
WORKDIR /app

# Copy the Python script to the working directory in the Docker image
COPY api.py /app/api.py

# Expose port 5252
EXPOSE 5252

# Run the Flask app
CMD ["python3", "api.py"]
